<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item android:bottom="6dp" android:top="6dp" android:left="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF"/> <!-- 25% white -->
            <corners android:radius="12dp"/>
        </shape>
    </item>

    <!-- Main Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#2E2E30"
                android:endColor="#28282A"
                android:type="linear"/>
            <stroke
                android:width="1dp"
                android:color="#99FFFFFF"/> <!-- 60% white -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</layer-list>
